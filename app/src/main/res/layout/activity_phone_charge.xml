<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/largePadding"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入手机号"
            android:text="18328734301"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="归属地 （湖南移动）"
            android:textSize="16sp" />


    </LinearLayout>

    <View
        style="@style/line_vertical"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/largerPadding"
        android:text="充话费" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/largePadding"
            android:background="@drawable/shape_rrect_purple_trrr"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/middlePadding"
                android:layout_gravity="center_horizontal"
                android:text="30"
                android:textColor="@color/purple"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="(元)"
                android:textColor="@color/purple"
                android:textSize="14sp" />

            <View
                style="@style/line_vertical"
                android:layout_margin="@dimen/middlePadding" />

            <TextView
                android:layout_width="wrap_content"
                android:text="售价 ¥50"
                android:textColor="@color/purple"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="V值 0.035V"
                android:textColor="@color/purple"
                android:layout_marginBottom="@dimen/largePadding"
                android:layout_marginTop="@dimen/smallerPadding"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/largePadding"
            android:background="@drawable/shape_rrect_purple_trrr"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/middlePadding"
                android:layout_gravity="center_horizontal"
                android:text="30"
                android:textColor="@color/purple"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="(元)"
                android:textColor="@color/purple"
                android:textSize="14sp" />

            <View
                style="@style/line_vertical"
                android:layout_margin="@dimen/middlePadding" />

            <TextView
                android:layout_width="wrap_content"
                android:text="售价 ¥50"
                android:textColor="@color/purple"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="V值 0.035V"
                android:textColor="@color/purple"
                android:layout_marginBottom="@dimen/largePadding"
                android:layout_marginTop="@dimen/smallerPadding"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/largePadding"
            android:layout_marginRight="@dimen/largePadding"
            android:background="@drawable/shape_rrect_purple_trrr"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/middlePadding"
                android:layout_gravity="center_horizontal"
                android:text="30"
                android:textColor="@color/purple"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="(元)"
                android:textColor="@color/purple"
                android:textSize="14sp" />

            <View
                style="@style/line_vertical"
                android:layout_margin="@dimen/middlePadding" />

            <TextView
                android:layout_width="wrap_content"
                android:text="售价 ¥50"
                android:textColor="@color/purple"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="V值 0.035V"
                android:textColor="@color/purple"
                android:layout_marginBottom="@dimen/largePadding"
                android:layout_marginTop="@dimen/smallerPadding"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>